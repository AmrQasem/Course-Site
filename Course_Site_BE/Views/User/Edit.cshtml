@model Course_Site_BE.ViewModels.UserVM

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="edit">
        <div class="container">
            <div class="row">
                <div class="back-div mx-auto col-xl-6 col-lg-8 col-md-8 col-12">
                    <div class="image text-center col-xl-12 col-lg-12 col md-12 col-12">
                        <img class="img-thumbnail img-fluid mx-auto" src="~/images/user img.png" alt="icon">
                    </div>
                    <form class="form col-12">
                        <div class="form-group">
                            <span class="material-icons">account_box</span>
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })

                        </div>

                        <div class="form-group">
                            <span class="material-icons">account_box</span>
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })

                        </div>

                        <div class="form-group">
                            <span class="material-icons">account_box</span>
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group">
                            <span class="material-icons">email</span>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })


                        </div>
                        <div class="form-group">
                            <span class="material-icons">smartphone</span>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })


                        </div>

                        <div class="form-group">
                            <span class="material-icons">lock</span>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        </div>

                        <div class="form-group text-center">
                            <button class="btn btn-success" type="submit">Update</button>
                        </div>
                        <div class="form-group text-center">
                            <a href="home.html">
                                <button class="btn btn-danger" type="button">Cancel</button>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}

